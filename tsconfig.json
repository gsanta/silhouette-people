{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "esnext",
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "commonjs",
        "outDir": "build",
        "jsx": "react",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom",
            "esnext.array"
        ],
        "types": [
            "node",
            "jest",
        ]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}